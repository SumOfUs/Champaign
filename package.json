      "^champaign-i18n$": "<rootDir>/spec/jest/champaign-i18n-stub.js"
    },
    "roots": [
      "<rootDir>/app/javascript"
    ],
    "setupFiles": [
      "<rootDir>/spec/jest/setupJest",
