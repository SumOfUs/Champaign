{% comment %} Description: SumOfUs branding around title, text, and share buttons {% endcomment %}

{% include 'Small Header Without Cover Photo' %}
<div class="tight-column">
  <div class="imageless-title">
    
    <div class="typography__highlight-wrapper">
      <h1 class="typography__highlight cover-photo__title">
        <span>{{ title }}</span>
      </h1>
    </div>
  </div>

  <div class="body-text">
    {{ content }}
    {% include 'Share' %}
    {% unless link_list == blank %}
        <hr class="stubby-hr" />
        <h3>{{ 'page.more_info' | t }}</h3>
        {% include 'Links' %}
      {% endunless %}
  </div>
  
</div>

{% include 'Small Image Footer' %}

<style>
  .tight-column {
    width: 80%;
    margin: 0 auto;
    overflow: hidden;
    margin-top: 120px;
  }
  .body-text {
    width: 100%;
    padding: 0;
    margin: 40px 0 200px 0;
  }
  @media (max-width: 580px) {
    .tight-column {
      margin-top: 60px;
      width: 100%;
      padding-left: 2%;
      padding-right: 2%;
      -moz-box-sizing: border-box;
      -webkit-box-sizing: border-box;
      box-sizing: border-box;
    }  
    .body-text {  
      width: calc(100% - 40px);
      margin-left: 20px;
      margin-right: 20px;
      padding: 0;
      text-align: left;
      padding-bottom: 120px;
    }
  }
</style>
