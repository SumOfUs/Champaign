  .skeleton {
    height: 51px;
    width: 42px;
    margin-right: 9px;
  }

  .share-title {
    padding-right: 20px;
    padding-left: 20px;
  }

  .copied {
    padding: 5px;
    font-size: 12px;
  }
}

@media (max-width: 400px) {
  .social-icons {
    justify-content: flex-start;
  }
}
</style>
