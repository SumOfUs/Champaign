  <div class="center-content">
    <div class="center-content__one-column">
      <div class="simple-footer__logo sumofus-logo--negative"></div>
      <div class="simple-footer__tagline sumofus-logo--tagline">
        {{ 'branding.tagline' | t }}
      </div>
      <div class="simple-footer__license">
        &copy; 2016 SumOfUs, {{ 'branding.license' | t }}
      </div>
      <div class="simple-footer__links">
        <a href="#take-action" class="simple-footer__link">{{ 'baysanto.header.translate' | t }}</a>
        <a href="#take-action" class="simple-footer__link">{{ 'baysanto.header.press_room' | t }}</a>
        <a href="#take-action" class="simple-footer__link">{{ 'baysanto.header.the_paper' | t }}</a>
        <a href="{{ 'footer.privacy_policy_url' | t }}" class="simple-footer__link">{{ 'footer.privacy_policy' | t }}</a>
        <a href="{{ 'footer.contact_url' | t }}" class="simple-footer__link">{{ 'footer.contact' | t }}</a>
      </div>
    </div>
  </div>
</div>
