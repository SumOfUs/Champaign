      'stop-the-bayer-monsanto-mega-merger',
      'bloquez-l-acquisition-de-monsanto-par-bayer',
      'bayer-monsanto-de',
      'bayer-monsanto-merger',
      'bayer-monsanto'
    ]});
  });
</script>

