#thermometer_widget.col-xs-12.widget-display
  .progress.col-xs-9
    / get a percentile value of display width for the progress bar from count and goal
    - @width = 100 * options['count'].to_f / options['goal'].to_f
    .progress-bar role="progressbar" aria-valuenow=options['count'].to_f aria-valuemin="0" aria-valuemax=options['goal'].to_f style="width: #{@width}%"
      = "#{options['count']}"
  .col-xs-3
    blockquote = " Goal: #{options['goal']}"
