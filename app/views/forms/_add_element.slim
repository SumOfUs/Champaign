= render partial: 'shared/error_messages', locals: {target: form_element }

= form_for [form, form_element], remote: true, html: {class: 'form-element', id: 'new_collection_element'}  do |f|
  .form-group
    = f.select :data_type, options_for_select(FormElement::VALID_TYPES), {}, class: 'form-control'
  .form-group
    = f.text_field :label,  class: 'form-control', placeholder: t('form_elements.shared.label')
  .form-group
    .input-group
      = f.text_field :name,  class: 'form-control typeahead', placeholder: t('form_elements.shared.name')
      .input-group-addon
        = link_to '#', class: 'modal-open'
          span.glyphicon.glyphicon-question-sign
  .checkbox
    = f.label :required do
      = f.check_box :required
      = t('plugins.action.make_required')

  .form-group
    button.btn.btn-default.xhr-feedback = t('plugins.action.add_field')


javascript:
  $('.modal-open').on('click', function(e){
    e.preventDefault();
    $('#form-elements-field-name-help').modal();
  })

- content_for :modals do
  = render partial: 'share/modal', locals: { id: 'form-elements-field-name-help', title: t('form_elements.forms.name.help.title'), body: t('form_elements.forms.name.help.body')}
