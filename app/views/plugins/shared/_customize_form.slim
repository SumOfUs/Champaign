- klass = "form-customization-#{form.id}"
h4 data-toggle="collapse" data-target=".#{klass}" aria-expanded="false"
  i.fa.fa-caret-right
  = t('plugins.petition.customise_form')
.form-customization.collapse class=klass
  .forms-edit
    = render partial: 'forms/edit', locals: { form: form }

  - if form
    h4 = t('plugins.petition.add_new_field')
    .forms-add-element
      = render partial: 'forms/add_element', locals: { form: form, form_element: FormElement.new}
