doctype html
html
  head
    title SumOfUs.org
    = render partial: 'shared/optimizely_snippet'
    meta name="viewport" content="width=device-width, initial-scale=1.0"
    = stylesheet_link_tag "sumofus"
    = javascript_include_tag "sumofus"
    script type="text/javascript" charset="utf-8" src="//c.shpg.org/99/sp.js"
    = csrf_meta_tags
    = favicon_link_tag 'sumofus/favicon.ico'

  body
    = yield

    .mobile-indicator
    - if @page.present?
      span.hidden.page_id = @page.id
      - if current_user
        = link_to 'Edit Page', edit_page_path(@page), class: 'campaigner-overlay__edit-link'
