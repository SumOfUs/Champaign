doctype html
html
  head
    title= content_for?(:title) ? content_for(:title) : 'Champaign'
    meta name="viewport" content="width=device-width, initial-scale=1.0"

    = stylesheet_link_tag    "application", media: 'all'

    = csrf_meta_tags
    = favicon_link_tag 'champaign/favicon.ico'

  body.page-edit-body
    .navbar--fixed__spacer
    .navbar.navbar-static-top.navbar--dark.navbar--fixed
      button.navbar-toggle type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse"
        span.icon-bar
        span.icon-bar
        span.icon-bar
      .navbar-collapse.collapse.navbar-responsive-collapse
        ul.nav.navbar-nav.pull-right
          = render 'shared/loginout_button'
        ul.nav.navbar-nav.pull-right
          = render 'shared/navbar_links'

    = render 'shared/flash'

    = javascript_include_tag "application"
    = javascript_pack_tag 'campaigner_facing'

    = yield
